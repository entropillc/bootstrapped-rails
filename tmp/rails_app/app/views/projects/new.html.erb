<% title "New Project" %>

<%= form_for @project do |f| %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name, :class => "xxlarge" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn primary float-right"%>
  </div>
<% end %>

<p><%= link_to "Back to List", projects_path %></p>
